<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/viewPartidaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#2F8EB9"
                android:text="Empire Titans x Adversario da Partida"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgAdversarioCardIngresso"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/time_b" />

                <TextView
                    android:id="@+id/viewDataCardIngresso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Data"
                    android:textAlignment="center"
                    android:textColor="#2f2f2f"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/viewLocalCardIngresso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Local"
                    android:textAlignment="center"
                    android:textColor="#2f2f2f"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/viewValorCardIngresso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Valor"
                    android:textAlignment="center"
                    android:textColor="#2f2f2f"
                    android:textSize="10sp" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>