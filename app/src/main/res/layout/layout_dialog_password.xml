<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#2F8EB9">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Insira sua atual senha de usuÃ¡rio:"
        android:textColor="@color/cardview_light_background" />

    <EditText
        android:id="@+id/txtSenhaDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#38000000"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/btConfirmaDialog"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="104dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Confirmar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btCancelaDialog"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btConfirmaDialog"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Cancelar"
        android:textColor="@android:color/background_light" />

</RelativeLayout>