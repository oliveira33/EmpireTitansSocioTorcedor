<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layouts.Fragments.Ingresso">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="> Compra de Ingresso"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Escolha e Compre Seu Ingresso"
                android:textAlignment="center" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleView_Ingresso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="560dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner" />

                <ImageButton
                    android:id="@+id/btTwitterIngresso"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="290dp"
                    android:layout_marginTop="54dp"
                    android:background="@android:color/transparent"
                    android:src="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btInstaIngresso"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="194dp"
                    android:layout_marginTop="54dp"
                    android:background="@android:color/transparent"
                    android:src="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btFacebookIngresso"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="102dp"
                    android:layout_marginTop="54dp"
                    android:background="@android:color/transparent"
                    android:src="@android:color/transparent" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBarIngresso"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#8d000000"
            android:padding="150dp" />
    </RelativeLayout>

</FrameLayout>