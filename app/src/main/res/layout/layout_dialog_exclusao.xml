<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/fundo_jogo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="ATENÇÃO!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:paddingLeft="5dp"
        android:text="Você tem absoluta certeza de que deseja excluir sua conta de usuário do Empire Titans Sócio Torcedor? Para continuar com o processo favor inserir sua senha de usuário:"
        android:textColor="@color/cardview_light_background" />

    <EditText
        android:id="@+id/txtSenhaDialogExclusao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView24"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/btConfirmaDialogExclusao"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="97dp"
        android:layout_marginTop="155dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Confirmar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btCancelaDialogExclusao"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btConfirmaDialogExclusao"
        android:layout_marginEnd="3dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Cancelar"
        android:textColor="@android:color/background_light" />

</RelativeLayout>