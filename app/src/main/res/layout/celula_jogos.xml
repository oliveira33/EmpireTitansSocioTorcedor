<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fundo_jogo" />

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="78dp"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="43dp"
                android:layout_toStartOf="@+id/imageView4"
                android:soundEffectsEnabled="true"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/imgCardJogoRival"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView4"
                app:srcCompat="@color/cardview_shadow_end_color" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView7"
                android:layout_below="@+id/imageView7"
                android:layout_marginTop="-43dp"
                android:text="Empire Titans"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCardJogoRival"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:layout_marginTop="-43dp"
                android:layout_toEndOf="@+id/imageView4"
                android:text="Rival"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCardJogoHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="12h30"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtCardJogoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCardJogoHorario"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="12/08/2018 - Domingo"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtCardJogoDisponibilidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCardJogoLocal"
                android:layout_centerHorizontal="true"
                android:text="Disponível"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_green_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtCardJogoLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCardJogoData"
                android:layout_centerHorizontal="true"
                android:text="Nosso Estádio"
                android:textColor="@android:color/background_light"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:rotation="90"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:rotation="270"
                app:srcCompat="@android:drawable/arrow_up_float" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>