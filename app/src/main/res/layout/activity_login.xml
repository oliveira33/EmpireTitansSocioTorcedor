<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layouts.Login">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fundo_azul" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            app:srcCompat="@drawable/img_login" />

        <EditText
            android:id="@+id/txtEmailAtt"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="#10ffffff"
            android:drawableLeft="@drawable/ic_action_person"
            android:drawableTint="@color/transparenteIcones"
            android:ems="10"
            android:hint="Digite seu E-Mail"
            android:inputType="textEmailAddress"
            android:text="gtv.oliveira@gmail.com"
            android:textAlignment="textStart"
            android:textColor="@color/transparenteTexto"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@color/transparenteIcones"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="#10ffffff"
            android:drawableLeft="@drawable/ic_action_lock"
            android:drawableTint="@color/transparenteIcones"
            android:ems="10"
            android:hint="Digite sua Senha"
            android:inputType="textPassword"
            android:text="123"
            android:textColor="@color/transparenteTexto"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@color/transparenteIcones"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btLogin"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#10ffffff"
                android:text="Login"
                android:textColor="@color/transparenteTexto"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btCadastrar"
                android:layout_width="110dp"
                android:layout_height="35dp"

                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#10ffffff"
                android:text="Cadastrar"
                android:textColor="@color/transparenteTexto"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#8d000000"
            android:padding="150dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif"
            android:text="@2018 Empire Titans SÃ³cio Torcedor"
            android:textAlignment="center"
            android:textColor="@color/transparenteTexto"
            android:textSize="10sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>